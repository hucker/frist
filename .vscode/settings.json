{
    "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",
    "python.testing.pytestArgs": [
        "test"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "workbench.colorCustomizations": {
        "activityBar.background": "#322E16",
        "titleBar.activeBackground": "#46401F",
        "titleBar.activeForeground": "#FBFAF5"
    },
    "cSpell.words": [
        "addopts",
        "agentic",
        "Chrono",
        "datetimes",
        "frist",
        "pycon",
        "Pytest",
        "qtrs",
        "setuptools",
        "testpaths",
        "timedelta",
        "usecases",
        "xdist"
    ],
    "python.sortImports.provider": "ruff",
    "python.sortImports.args": ["--fix"],
    "python.formatting.provider": "ruff",
    "ruff.fixOnSave": true,
    "ruff.config": "${workspaceFolder}/pyproject.toml"
}